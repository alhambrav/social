<article class="{{ternary flags 'comment-flagged' ''}} {{ternary isTrashed 'comment-trashed' ''}}">
    <div class="body-wrapper">
        <div class="avatar">
            <img src="data:image/png;base64," class="silhouette"/>
        </div>
        <div class="comment-data">
            <header>
                <!-- TODO fixed type once backed fixes (flaged) -->
                <a class="pull-right" data-action-flag title="{{flags}} flags. {{ternary userInfo.flaged 'You flagged this' ''}}">
                    <i class="crafter-social-icon cs-icon-flag"></i>
                </a>
                {{#mif userInfo.actions 'has' 'moderate'}}
                <a class="pull-right" data-action="trash">
                    <i class="crafter-social-icon cs-icon-trash"></i>
                </a>
                {{/mif}}
                <strong>
                    {{#if profile.displayName}}
                        {{profile.displayName}}
                    {{else}}
                        {{profile.userName}}
                    {{/if}}
                </strong>
                <small>{{date dateAdded}}</small>
            </header>
            <section class="comment-body">
                {{html textContent}}
            </section>
        </div>
    </div>
    <footer class="comment-actions">
        <div class="clearfix">
            <ul class="list-inline list-unstyled pull-left">
                {{#unless userInfo.liked}}
                    {{#unless userInfo.disliked}}
                        <li>
                            <a data-action="like">
                                Like
                            </a>
                        </li>
                        <li>
                            <a data-action="dislike">
                                Dislike
                            </a>
                        </li>
                    {{/unless}}
                {{/unless}}
                {{#if userInfo.liked}}
                    <a data-action="unlike">
                        Unlike
                    </a>
                {{/if}}
                {{#if userInfo.disliked}}
                    <li>
                        <a data-action="undoDislike">
                            Undo dislike
                        </a>
                    </li>
                {{/if}}
                <li class="hide">
                    <a data-action-reply><i class="crafter-social-icon cs-icon-transfer"></i> Reply ({{childCount}})</a>
                </li>
            </ul>
            <ul class="list-inline list-unstyled pull-right">
                <li>
                    <a data-action="files"><i class="crafter-social-icon cs-icon-upload"></i> Files ({{attachments.length}})</a>
                </li>
            </ul>
        </div>
        {{#mif likes 'or' dislikes}}
            <div class="like-data">
                {{#if likes}}
                    {{#if userInfo.liked}}
                        {{#eq likes 1}}
                            You like this
                        {{else}}
                            {{#eq likes 2}}
                                You and 1 person like this
                            {{else}}
                                You and {{minusOne likes}} people like this
                            {{/eq}}
                        {{/eq}}
                    {{else}}
                        {{likes}} {{multiplicity likes 'people like' 'person likes'}} this
                    {{/if}}
                {{else}}
                    No likes
                {{/if}} Â·
                {{#if dislikes}}
                    {{#if userInfo.disliked}}
                        {{#eq dislikes 1}}
                            You dislike this
                        {{else}}
                            {{#eq dislikes 2}}
                                You and 1 person dislike this
                            {{else}}
                                You and {{minusOne dislikes}} people dislike this
                            {{/eq}}
                        {{/eq}}
                    {{else}}
                        {{dislikes}} {{multiplicity dislikes 'people dislike' 'person dislikes'}} this
                    {{/if}}
                {{else}}
                    No dislikes
                {{/if}}
            </div>
        {{/mif}}
    </footer>
    <div class="comment-children"></div>
</article>